<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dip"
    tools:context=".ShareChooserActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="60dip"
            android:layout_width="320dip"
            android:id="@+id/sc_sms_layout" 
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/lightbluebgxml"
            android:layout_margin="10dip">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sms"
                android:contentDescription="@string/sms_title"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sms_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sc_email_layout"
            android:layout_height="60dip"
            android:layout_width="320dip"
            android:background="@drawable/lightbluebgxml"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_margin="10dip">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/email"
                android:contentDescription="@string/email_title"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>
